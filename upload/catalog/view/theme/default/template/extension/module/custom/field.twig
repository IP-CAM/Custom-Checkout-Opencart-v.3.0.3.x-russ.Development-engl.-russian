<div class="row">
{% for field in fields %}
  <div class="col-xs-12 col-sm-6 field" {% if not field.show %} style="display: none;" {% endif %}>
  {% if field.alias == 'firstname' %}
    <div class="form-group {% if field.required %} required {% endif %}">
      <label class="control-label" for="input-firstname">{{ entry_firstname }}</label>
      <input type="text" name="firstname" value="{{ field.value }}" placeholder="{{ entry_firstname }}" id="input-firstname" class="form-control" data-error="{{ field.error }}" data-validation="{{ field.validation }}" {% if field.required %} data-required {% endif %}>
      <span class="glyphicon form-control-feedback" aria-hidden="true" style="display: none;"></span>
    </div>
  {% endif %}
  {% if field.alias == 'lastname' %}
    <div class="form-group {% if field.required %} required {% endif %}">
      <label class="control-label" for="input-lastname">{{ entry_lastname }}</label>
      <input type="text" name="lastname" value="{{ field.value }}" placeholder="{{ entry_lastname }}" id="input-lastname" class="form-control" data-error="{{ field.error }}" data-validation="{{ field.validation }}" {% if field.required %} data-required {% endif %}>
      <span class="glyphicon form-control-feedback" aria-hidden="true" style="display: none;"></span>
    </div>
  {% endif %}
  {% if field.alias == 'email' %}
    <div class="form-group {% if field.required %} required {% endif %}">
      <label class="control-label" for="input-email">{{ entry_email }}</label>
      <input type="text" name="email" value="{{ field.value }}" placeholder="{{ entry_email }}" id="input-email" class="form-control" data-error="{{ field.error }}" data-validation="{{ field.validation }}" {% if field.required %} data-required {% endif %}>
      <span class="glyphicon form-control-feedback" aria-hidden="true" style="display: none;"></span>
    </div>
  {% endif %}
  {% if field.alias == 'telephone' %}
    <div class="form-group {% if field.required %} required {% endif %}">
      <label class="control-label" for="input-telephone">{{ entry_telephone }}</label>
      <input type="text" name="telephone" value="{{ field.value }}" placeholder="{{ entry_telephone }}" id="input-telephone" class="form-control" data-error="{{ field.error }}" data-validation="{{ field.validation }}" {% if field.required %} data-required="required" {% endif %}>
      <span class="glyphicon form-control-feedback" aria-hidden="true" style="display: none;"></span>
    </div>
  {% endif %}
  {% if field.alias == 'fax' %}
    <div class="form-group {% if field.required %} required {% endif %}">
      <label class="control-label" for="input-fax">{{ entry_fax }}</label>
      <input type="text" name="fax" value="{{ field.value }}" placeholder="{{ entry_fax }}" id="input-fax" class="form-control" data-error="{{ field.error }}" data-validation="{{ field.validation }}" {% if field.required %} data-required="required" {% endif %}>
      <span class="glyphicon form-control-feedback" aria-hidden="true" style="display: none;"></span>
    </div>
  {% endif %}
  {% if field.alias == 'password' %}
    <div class="form-group {% if field.required %} required {% endif %}">
      <label class="control-label" for="input-password">{{ entry_password }}</label>
      <input type="password" name="password" value="{{ field.value }}" placeholder="{{ entry_password }}" id="input-password" class="form-control" data-error="{{ field.error }}" data-validation="{{ field.validation }}" {% if field.required %} data-required="required" {% endif %}>
      <span class="glyphicon form-control-feedback" aria-hidden="true" style="display: none;"></span>
    </div>
  {% endif %}
  {% if field.alias == 'confirm' %}
    <div class="form-group {% if field.required %} required {% endif %}">
      <label class="control-label" for="input-confirm">{{ entry_confirm }}</label>
      <input type="password" name="confirm" value="{{ field.value }}" placeholder="{{ entry_confirm }}" id="input-confirm" class="form-control" data-error="{{ field.error }}" data-validation="{{ field.validation }}" {% if field.required %} data-required="required" {% endif %}>
      <span class="glyphicon form-control-feedback" aria-hidden="true" style="display: none;"></span>
    </div>
  {% endif %}
  {% if field.alias == 'company' %}
    <div class="form-group {% if field.required %} required {% endif %}">
      <label class="control-label" for="input-company">{{ entry_company }}</label>
      <input type="text" name="company" value="{{ field.value }}" placeholder="{{ entry_company }}" id="input-company" class="form-control" data-error="{{ field.error }}" data-validation="{{ field.validation }}" {% if field.required %} data-required="required" {% endif %}>
      <span class="glyphicon form-control-feedback" aria-hidden="true" style="display: none;"></span>
    </div>
  {% endif %}
  {% if field.alias == 'address_1' %}
    <div class="form-group {% if field.required %} required {% endif %}">
      <label class="control-label" for="input-address-1">{{ entry_address_1 }}</label>
      <input type="text" name="address_1" value="{{ field.value }}" placeholder="{{ entry_address_1 }}" id="input-address-1" class="form-control" data-error="{{ field.error }}" data-validation="{{ field.validation }}" {% if field.required %} data-required="required" {% endif %}>
      <span class="glyphicon form-control-feedback" aria-hidden="true" style="display: none;"></span>
    </div>
  {% endif %}
  {% if field.alias == 'address_2' %}
    <div class="form-group {% if field.required %} required {% endif %}">
      <label class="control-label" for="input-address-2">{{ entry_address_2 }}</label>
      <input type="text" name="address_2" value="{{ field.value }}" placeholder="{{ entry_address_2 }}" id="input-address-2" class="form-control" data-error="{{ field.error }}" data-validation="{{ field.validation }}" {% if field.required %} data-required="required" {% endif %}>
      <span class="glyphicon form-control-feedback" aria-hidden="true" style="display: none;"></span>
    </div>
  {% endif %}
  {% if field.alias == 'city' %}
    <div class="form-group {% if field.required %} required {% endif %}">
      <label class="control-label" for="input-city">{{ entry_city }}</label>
      <input type="text" name="city" value="{{ field.value }}" placeholder="{{ entry_city }}" id="input-city" class="form-control" data-error="{{ field.error }}" data-validation="{{ field.validation }}" {% if field.required %} data-required="required" {% endif %}>
      <span class="glyphicon form-control-feedback" aria-hidden="true" style="display: none;"></span>
    </div>
  {% endif %}
  {% if field.alias == 'postcode' %}
    <div class="form-group {% if field.required %} required {% endif %}">
      <label class="control-label" for="input-postcode">{{ entry_postcode }}</label>
      <input type="text" name="postcode" value="{{ field.value }}" placeholder="{{ entry_postcode }}" id="input-postcode" class="form-control" data-error="{{ field.error }}" data-validation="{{ field.validation }}" {% if field.required %} data-required="required" {% endif %}>
      <span class="glyphicon form-control-feedback" aria-hidden="true" style="display: none;"></span>
    </div>
  {% endif %}
  {% if field.alias == 'country_id' %}
    <div class="form-group {% if field.required %} required {% endif %}">
      <label class="control-label" for="input-country-id">{{ entry_country }}</label>
      <select name="country_id" id="input-country-id" class="form-control" data-error="{{ field.error }}" data-validation {% if field.required %} data-required="required" {% endif %}>
        <option value="">{{ text_select }}</option>
        {% for country in countries %} 
          <option value="{{ country['country_id'] }}" {% if (country['country_id'] == country_id) %} selected="selected" {% endif %}>{{ country['name'] }}</option>
        {% endfor %}
      </select>
      <span class="glyphicon form-control-feedback" aria-hidden="true" style="display: none;"></span>
    </div>
    <script>
      $('#custom-shipping select[name=\'country_id\']').on('change', function() {
        $.ajax({
          url: 'index.php?route=checkout/checkout/country&country_id=' + this.value,
          dataType: 'json',
          beforeSend: function() {
            $('#custom-shipping select[name=\'country_id\']').after(' <i class="fa fa-circle-o-notch fa-spin"></i>');
          },
          complete: function() {
            $('.fa-spin').remove();
          },
          success: function(json) {
            if (json['postcode_required'] == '1') {
              $('#custom-shipping input[name=\'postcode\']').parent().parent().addClass('required');
            } else {
              $('#custom-shipping input[name=\'postcode\']').parent().parent().removeClass('required');
            }

            html = '<option value="">{{ text_select }}</option>';

            if (json['zone'] && json['zone'] != '') {
              for (i = 0; i < json['zone'].length; i++) {
                html += '<option value="' + json['zone'][i]['zone_id'] + '"';

                if (json['zone'][i]['zone_id'] == '{{ zone_id }}') {
                  html += ' selected="selected"';
                }

                html += '>' + json['zone'][i]['name'] + '</option>';
              }
            } else {
              html += '<option value="0" selected="selected">{{ text_none }}</option>';
            }

            $('#custom-shipping select[name=\'zone_id\']').html(html);
          },
          error: function(xhr, ajaxOptions, thrownError) {
            alert(thrownError + "\r\n" + xhr.statusText + "\r\n" + xhr.responseText);
          }
        });
      });
      $('#custom-shipping select[name=\'country_id\']').trigger('change');
    </script>
  {% endif %}
  {% if field.alias == 'zone_id' %}
    <div class="form-group {% if field.required %} required {% endif %}">
      <label class="control-label" for="input-zone-id">{{ entry_country }}</label>
      <select name="zone_id" id="input-zone-id" class="form-control" data-error="{{ field.error }}" data-validation {% if field.required %} data-required="required" {% endif %}></select>
      <span class="glyphicon form-control-feedback" aria-hidden="true" style="display: none;"></span>
    </div>
  {% endif %}
  {% if field.alias|slice(0, 12) == 'custom_field' %}
    {% if field.type == 'select' %}
    <div id="field-custom-field{{ field.custom_field_id }}" class="form-group custom-field" data-sort="{{ field.sort_order }}" >
      <label class="control-label" for="input-custom-field{{ field.custom_field_id }}">{{ field.name }}</label>
      <select name="custom_field{{ field.custom_field_id }}" id="input-custom-field{{ field.custom_field_id }}" data-error="{{ field.error }}" data-validation class="form-control" >
        <option value="">{{ text_select }}</option>
        {% for custom_field_value in field['custom_field_value'] %}
        <option value="{{ custom_field_value.custom_field_value_id }}" {% if field.value == custom_field_value.custom_field_value_id %}selected{% endif %}>{{ custom_field_value.name }}</option>
        {% endfor %}
      </select>
      <span class="glyphicon form-control-feedback" aria-hidden="true" style="display: none;"></span>
    </div>
    {% endif %}
    {% if field.type == 'radio' %}
    <div id="field-custom-field{{ field.custom_field_id }}" class="form-group custom-field" data-sort="{{ field.sort_order }}" >
      <label class="control-label">{{ field.name }}</label>
      <div id="input-custom-field{{ field.custom_field_id }}">
        {% for custom_field_value in field['custom_field_value'] %}
        <div class="radio">
          <label>
            <input type="radio" name="custom_field{{ field.custom_field_id }}" value="{{ custom_field_value.custom_field_value_id }}" {% if field.value == custom_field_value.custom_field_value_id %} checked="checked" {% endif %}>
            {{ custom_field_value.name }}</label>
        </div>
        {% endfor %}
      </div>
    </div>
    {% endif %}
    {% if field.type == 'checkbox' %}
    <div id="field-custom-field{{ field.custom_field_id }}" class="form-group custom-field" data-sort="{{ field.sort_order }}" >
      <label class="control-label">{{ field.name }}</label>
      <div id="input-custom-field{{ field.custom_field_id }}">
        {% for custom_field_value in field['custom_field_value'] %}
        <div class="checkbox">
          <label>
            <input type="checkbox" name="custom_field{{ field.custom_field_id }}[]" value="{{ custom_field_value.custom_field_value_id }}" {% if custom_field_value.custom_field_value_id in field.value %} checked="checked" {% endif %}>
            {{ custom_field_value.name }}</label>
        </div>
        {% endfor %}
      </div>
    </div>
    {% endif %}
    {% if field.type == 'text' %}
    <div id="field-custom-field{{ field.custom_field_id }}" class="form-group custom-field {% if field.required %} required {% endif %}" data-sort="{{ field.sort_order }}">
      <label class="control-label" for="input-custom-field{{ field.custom_field_id }}">{{ field.name }}</label>
      <input type="text" name="custom_field{{ field.custom_field_id }}" value="{{ field.value }}" placeholder="{{ field.name }}" id="input-custom-field{{ field.custom_field_id }}" class="form-control" data-error="{{ field.error }}" data-validation="{{ field.validation }}">
      <span class="glyphicon form-control-feedback" aria-hidden="true" style="display: none;"></span>
    </div>
    {% endif %}
    {% if field.type == 'textarea' %}
    <div id="field-custom-field{{ field.custom_field_id }}" class="form-group custom-field {% if field.required %} required {% endif %}" data-sort="{{ field.sort_order }}">
      <label class="control-label" for="input-custom-field{{ field.custom_field_id }}">{{ field.name }}</label>
      <textarea name="custom_field{{ field.custom_field_id }}" rows="5" placeholder="{{ field.name }}" id="input-custom-field{{ field.custom_field_id }}" class="form-control" data-error="{{ field.error }}" data-validation="{{ field.validation }}">{{ field.value }}</textarea>
      <span class="glyphicon form-control-feedback" aria-hidden="true" style="display: none;"></span>
    </div>
    {% endif %}
    {% if field.type == 'file' %}
    <div id="field-custom-field{{ field.custom_field_id }}" class="form-group custom-field {% if field.required %} required {% endif %}" data-sort="{{ field.sort_order }}">
      <label class="control-label">{{ field.name }}</label><br>
      <button type="button" id="button-custom-field{{ field.custom_field_id }}" data-error="{{ field.error }}" data-loading-text="{{ text_loading }}" class="btn btn-default"><i class="fa {% if not field.value %} fa-upload {% else %} fa-check {% endif %}"></i> {{ button_upload }}</button>
      <input type="hidden" name="custom_field{{ field.custom_field_id }}" value="{{ field.value }}" id="input-custom-field{{ field.custom_field_id }}">
    </div>
    {% endif %}
    {% if field.type == 'date' %}
    <div id="field-custom-field{{ field.custom_field_id }}" class="form-group custom-field {% if field.required %} required {% endif %}" data-sort="{{ field.sort_order }}">
      <label class="control-label" for="input-custom-field{{ field.custom_field_id }}">{{ field.name }}</label>
      <input type="date" name="custom_field{{ field.custom_field_id }}" value="{{ field.value }}" placeholder="{{ field.name }}" data-date-format="YYYY-MM-DD" id="input-custom-field{{ field.custom_field_id }}" data-error="{{ field.error }}" data-validation class="form-control">
      <span class="glyphicon form-control-feedback" aria-hidden="true" style="display: none;"></span>
    </div>
    {% endif %}
    {% if field.type == 'time' %}
    <div id="field-custom-field{{ field.custom_field_id }}" class="form-group custom-field {% if field.required %} required {% endif %}" data-sort="{{ field.sort_order }}">
      <label class="control-label" for="input-custom-field{{ field.custom_field_id }}">{{ field.name }}</label>
      <input type="time" name="custom_field{{ field.custom_field_id }}" value="{{ field.value }}" placeholder="{{ field.name }}" data-date-format="HH:mm" id="input-custom-field{{ field.custom_field_id }}" data-error="{{ field.error }}" data-validation class="form-control">
      <span class="glyphicon form-control-feedback" aria-hidden="true" style="display: none;"></span>
    </div>
    {% endif %}
    {% if field.type == 'datetime' %}
    <div id="field-custom-field{{ field.custom_field_id }}" class="form-group custom-field {% if field.required %} required {% endif %}" data-sort="{{ field.sort_order }}">
      <label class="control-label" for="input-custom-field{{ field.custom_field_id }}">{{ field.name }}</label>
      <input type="datetime-local" name="custom_field{{ field.custom_field_id }}" value="{{ field.value }}" placeholder="{{ field.name }}" data-date-format="YYYY-MM-DD HH:mm" id="input-custom-field{{ field.custom_field_id }}" data-error="{{ field.error }}" data-validation class="form-control">
      <span class="glyphicon form-control-feedback" aria-hidden="true" style="display: none;"></span>
    </div>
    {% endif %}
  {% endif %}
  </div>
{% endfor %}
</div>
<script>
$('#custom-customer button[id^=\'button-custom-field\']').on('click', function() {
  var node = this;

  $('#form-upload').remove();

  $('body').prepend('<form enctype="multipart/form-data" id="form-upload" style="display: none;"><input type="file" name="file"></form>');

  $('#form-upload input[name=\'file\']').trigger('click');

  if (typeof timer != 'undefined') {
      clearInterval(timer);
  }

  timer = setInterval(function() {
    if ($('#form-upload input[name=\'file\']').val() != '') {
      clearInterval(timer);

      $.ajax({
        url: 'index.php?route=tool/upload',
        type: 'post',
        dataType: 'json',
        data: new FormData($('#form-upload')[0]),
        cache: false,
        contentType: false,
        processData: false,
        beforeSend: function() {
          $(node).find('.fa').attr('class', 'fa fa-spinner fa-pulse fa-3x fa-fw');
        },
        success: function(json) {
          $('.text-danger, .text-success').remove();

          if (json['error']) {
            $(node).parent().find('input[name^=\'custom_field\']').after('<div class="text-danger">' + json['error'] + '</div>');
            $(node).find('.fa').attr('class', 'fa fa-upload');;
          }

          if (json['success']) {
            $(node).parent().find('input[name^=\'custom_field\']').after('<div class="text-success">' + json['success'] + '</div>');
            $(node).find('.fa').attr('class', 'fa fa-check');
            $(node).parent().find('input[name^=\'custom_field\']').val(json['code']);
          }
        },
        error: function(xhr, ajaxOptions, thrownError) {
          alert(thrownError + "\r\n" + xhr.statusText + "\r\n" + xhr.responseText);
        }
      });
    }
  }, 500);
});
</script>