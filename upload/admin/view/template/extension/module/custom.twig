{{ header }}
{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <button type="submit" form="form-latest" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a>
			</div>
      <h1>{{ extension_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb['href'] }}">{{ breadcrumb['text'] }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>
  <div class="container-fluid">
    {% if (error_warning) %}
			<div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
				<button type="button" class="close" data-dismiss="alert">&times;</button>
			</div>
    {% endif %}
    {% if (success is defined) %}
			<div class="alert alert-success"><i class="fa fa-exclamation-circle"></i> {{ success }}
				<button type="button" class="close" data-dismiss="alert">&times;</button>
			</div>
    {% endif %}
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit }}</h3>
      </div>
      <div class="panel-body">
        <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-module" class="form-horizontal">
					<ul class="nav nav-tabs">
						<li class="active"><a href="#tab-general" data-toggle="tab">{{ tab_general }}</a></li>
						<li><a href="#tab-cart" 		data-toggle="tab">{{ tab_cart }}</a></li>
						<li><a href="#tab-customer" data-toggle="tab">{{ tab_customer }}</a></li>
						<li><a href="#tab-shipping" data-toggle="tab">{{ tab_shipping }}</a></li>
						<li><a href="#tab-payment" 	data-toggle="tab">{{ tab_payment }}</a></li>
						<li><a href="#tab-redirect" data-toggle="tab">{{ tab_redirect }}</a></li>
						<li><a href="#tab-about" 		data-toggle="tab">{{ tab_about }}</a></li>
					</ul>
					<div class="tab-content">
						<div class="tab-pane active" id="tab-general">
							{# Status #}
							<div class="form-group">
								<label class="col-sm-2 control-label" for="input-status">{{ entry_status }}</label>
								<div class="col-sm-10">
									<select name="module_custom_status" id="input-status" class="form-control">
										{% if (status) %}
										<option value="1" selected="selected">{{ text_enabled }}</option>
										<option value="0">{{ text_disabled }}</option>
										{% else %}
										<option value="1">{{ text_enabled }}</option>
										<option value="0" selected="selected">{{ text_disabled }}</option>
										{% endif %}
									</select>
								</div>
								<script>
									$("select[name=module_custom_status]").on('change', function(){
										if ($(this).val() == 0) {
											$(this).css('backgroundColor', 'mistyrose');
										} else {
											$(this).css('backgroundColor', '');
										};
									});
									$("select[name=module_custom_status]").trigger('change');
								</script>
							</div>
							{# End Status #}
							{# Theme #}
							<div class="form-group">
								<label class="col-sm-2 control-label" for="input-theme"><span data-toggle="tooltip" title="{{ help_theme }}">{{ entry_theme }}</span></label>
								<div class="col-sm-10">
									<select name="module_custom_theme" id="input-theme" class="form-control">
										{% for theme_id, name in theme_list %}
											<option value="{{ theme_id }}" {% if (theme_id == theme) %}selected="selected"{% endif %} >{{ name }}</option>
										{% endfor %}
									</select>
								</div>
							</div>
							{# End Theme #}
							{# Login #}
							<div class="form-group">
								<label class="col-sm-2 control-label" for="input-login"><span data-toggle="tooltip" title="{{ help_login }}">{{ entry_login }}</span></label>
								<div class="col-sm-10">
									<select name="module_custom_login" id="input-login" class="form-control">
										{% if (login) %}
										<option value="1" selected="selected">{{ text_enabled }}</option>
										<option value="0">{{ text_disabled }}</option>
										{% else %}
										<option value="1">{{ text_enabled }}</option>
										<option value="0" selected="selected">{{ text_disabled }}</option>
										{% endif %}
									</select>
								</div>
							</div>
							{# End Login #}
							{# Comment #}
							<div class="form-group">
								<label class="col-sm-2 control-label" for="input-comment"><span data-toggle="tooltip" title="{{ help_comment }}">{{ entry_comment }}</span></label>
								<div class="col-sm-10">
									<select name="module_custom_comment" id="input-comment" class="form-control">
										{% if (comment) %}
										<option value="1" selected="selected">{{ text_enabled }}</option>
										<option value="0">{{ text_disabled }}</option>
										{% else %}
										<option value="1">{{ text_enabled }}</option>
										<option value="0" selected="selected">{{ text_disabled }}</option>
										{% endif %}
									</select>
								</div>
							</div>
							{# End Comment #}
							{# Module #}
							<div class="form-group">
								<label class="col-sm-2 control-label" for="input-module"><span data-toggle="tooltip" title="{{ help_module }}">{{ entry_module }}</span></label>
								<div class="col-sm-10">
									<select name="module_custom_module" id="input-module" class="form-control">
										{% if (module) %}
										<option value="1" selected="selected">{{ text_enabled }}</option>
										<option value="0">{{ text_disabled }}</option>
										{% else %}
										<option value="1">{{ text_enabled }}</option>
										<option value="0" selected="selected">{{ text_disabled }}</option>
										{% endif %}
									</select>
								</div>
							</div>
							{# End Module #}
							{# Total #}
							<div class="form-group">
								<label class="col-sm-2 control-label" for="input-total"><span data-toggle="tooltip" title="{{ help_total }}">{{ entry_block_total }}</span></label>
								<div class="col-sm-10">
									<select name="module_custom_total" id="input-total" class="form-control">
										{% if (total) %}
										<option value="1" selected="selected">{{ text_enabled }}</option>
										<option value="0">{{ text_disabled }}</option>
										{% else %}
										<option value="1">{{ text_enabled }}</option>
										<option value="0" selected="selected">{{ text_disabled }}</option>
										{% endif %}
									</select>
								</div>
							</div>
							{# End Total #}
							{# Confirm #}
							<div class="form-group">
								<label class="col-sm-2 control-label" for="input-confirm"><span data-toggle="tooltip" title="{{ help_confirm }}">{{ entry_confirm }}</span></label>
								<div class="col-sm-10">
									<select name="module_custom_confirm" id="input-confirm" class="form-control">
										<option value="popup" 	{% if confirm == 'popup' %} 	selected="selected" {% endif %}>{{ text_confirm_popup }}</option>
										<option value="skip" 		{% if confirm == 'skip' %} 		selected="selected" {% endif %}>{{ text_confirm_skip }}</option>
										<option value="bottom" 	{% if confirm == 'bottom' %} 	selected="selected" {% endif %}>{{ text_confirm_bottom }}</option>
									</select>
								</div>
							</div>
							{# End Confirm #}
						</div>
						<div class="tab-pane" id="tab-cart">
							{% if error_cart %}
								<div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {{ error_cart }}
									<button type="button" class="close" data-dismiss="alert">&times;</button>
								</div>
							{% endif %}
							<div class="form-group">
								<label class="col-sm-2 control-label" for="input-cart-status">{{ entry_status }}</label>
								<div class="col-sm-10">
									<select name="module_custom_cart[status]" id="input-cart-status" class="form-control">
										{% if (cart.status) %}
										<option value="1" selected="selected">{{ text_yes }}</option>
										<option value="0">{{ text_no }}</option>
										{% else %}
										<option value="1">{{ text_yes }}</option>
										<option value="0" selected="selected">{{ text_no }}</option>
										{% endif %}
									</select>
								</div>
							</div>
							<div class="form-group">
								<label class="col-sm-2 control-label" for="input-cart-weight"><span data-toggle="tooltip" title="{{ help_weight }}">{{ entry_weight }}</span></label>
								<div class="col-sm-10">
									<select name="module_custom_cart[weight]" id="input-weight-status" class="form-control">
										{% if (cart.weight) %}
										<option value="1" selected="selected">{{ text_yes }}</option>
										<option value="0">{{ text_no }}</option>
										{% else %}
										<option value="1">{{ text_yes }}</option>
										<option value="0" selected="selected">{{ text_no }}</option>
										{% endif %}
									</select>
								</div>
							</div>
							<div class="form-group">
								<label class="col-sm-2 control-label" for="input-cart-totals"><span data-toggle="tooltip" title="{{ help_product_total }}">{{ entry_product_total }}</span></label>
								<div class="col-sm-10">
									<select name="module_custom_cart[totals]" id="input-totals-status" class="form-control">
										{% if (cart.totals) %}
										<option value="1" selected="selected">{{ text_yes }}</option>
										<option value="0">{{ text_no }}</option>
										{% else %}
										<option value="1">{{ text_yes }}</option>
										<option value="0" selected="selected">{{ text_no }}</option>
										{% endif %}
									</select>
								</div>
							</div>
							<hr>
							<table id="cart-column" class="table table-striped table-bordered table-hover">
							<thead>
								<tr>
									<td class="text-left">
										{{ column_column }}
									</td>
									<td width="56px"></td>
								</tr>
							</thead>
							<tbody>
								{% set cartKey = 0 %}
								{% for column in cart.column %}
									<tr id="cart-column-{{ cartKey }}">
										<td>
											<select name="module_custom_cart[column][{{ cartKey }}]" id="input-cart-column-{{ cartKey }}" class="form-control">
												{% for name, item in cart_column %}
													<option value="{{ name }}" {% if (column == name) %}selected="selected"{% endif %} >{{ item.label }}</option>
												{% endfor %}
											</select>
										</td>
										<td>
											<button type="button" onclick="$('#cart-column-{{ cartKey }}').remove();" data-toggle="tooltip" title="{{ entry_remove }}" class="btn btn-danger"><i class="fa fa-minus-circle"></i></button>
										</td>
									</tr>
									{% set cartKey = cartKey + 1 %} 
								{% endfor %}
							</tbody>
							<tfoot>
								<td ></td>
								<td>
									<button type="button" onclick="addCartColumn();" data-toggle="tooltip" title="" class="btn btn-primary" data-original-title="Добавить поле"><i class="fa fa-plus-circle"></i></button>
								</td>
							</tfoot>
							</table>

							<script>
								var cartKey = {{ cartKey }};
								function addCartColumn(){

									html  = '<tr id="cart-column-' + cartKey + '">';
									html += '<td><select name="module_custom_cart[column][' + cartKey + ']" id="input-cart-column-' + cartKey + '" class="form-control">';
										{% for name,item in cart_column %} 
											html += '<option value="{{ name }}" >{{ item.label }} ';
										{% endfor %} 
									html += '</select></td>';

									html += '<td><button type="button" onclick="$(\'#cart-column-' + cartKey + '\').remove();" data-toggle="tooltip" title="Удалить" class="btn btn-danger"><i class="fa fa-minus-circle"></i></button></td>';
									html += '</tr>';

									$('#cart-column').append(html);
									cartKey++;
								};
							</script>

						</div>
						<div class="tab-pane" id="tab-customer">
							{% if error_customer %}
								<div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {{ error_customer }}
									<button type="button" class="close" data-dismiss="alert">&times;</button>
								</div>
							{% endif %}
							<div class="form-group">
								<label class="col-sm-2 control-label"><span data-toggle="tooltip" title="{{ help_customer }}">{{ entry_status }}</span></label>
								<div class="col-sm-10">
									<select class="form-control" readonly>
										<option selected="selected" disabled>{{ text_enabled }}</option>
									</select>
								</div>
							</div>
							<br>
							<table id="customer-field" class="table table-striped table-bordered table-hover">
								<thead>
									<tr>
										<td class="text-left">
											{{ column_field }}
										</td>
										<td>
											{{ column_custumer_group }}
										</td>
										<td>
											{{ column_required }}
										</td>
										<td>
											{{ column_validation }}
										</td>
										<td width="56px"></td>
									</tr>
								</thead>
								<tbody>
									{% set customer_key = 0 %}
									{% for field in customer.fields %}
										<tr id="customer-field-{{ customer_key }}">
											<td>
												<select name="module_custom_customer[fields][{{ customer_key }}][name]" class="form-control">
													{% for name, item in customer_fields %}
														<option value="{{ name }}" {% if field.name == name %} selected="selected" {% endif %}>{{ item.label }}</option>
													{% endfor %}
												</select>
											</td>
											<td>
												{% for customer_group in customer_groups %}
													<div class="checkbox"><label>
														{% if field.customer_group and (customer_group.customer_group_id in field.customer_group) %}
															<input type="checkbox" name="module_custom_customer[fields][{{ customer_key }}][customer_group][]" value="{{ customer_group.customer_group_id }}" checked="checked" />
														{% else %}
															<input type="checkbox" name="module_custom_customer[fields][{{ customer_key }}][customer_group][]" value="{{ customer_group.customer_group_id }}" />
														{% endif %}
														{{ customer_group.name }}
													</label></div>
												{% endfor %}
											</td>
											<td>
												{% for customer_group in customer_groups %}
													<div class="checkbox"><label>
														{% if field.required and (customer_group.customer_group_id in field.required) %}
															<input type="checkbox" name="module_custom_customer[fields][{{ customer_key }}][required][]" value="{{ customer_group.customer_group_id }}" checked="checked" />
														{% else %}
															<input type="checkbox" name="module_custom_customer[fields][{{ customer_key }}][required][]" value="{{ customer_group.customer_group_id }}" />
														{% endif %}
														{{ customer_group.name }}
													</label></div>
												{% endfor %}
											</td>
											<td>
												<input type="text" name="module_custom_customer[fields][{{ customer_key }}][validation]" value="{{ field.validation }}" placeholder="{{ entry_validate }}"  class="form-control"/>
											</td>
											<td>
												<button type="button" onclick="$('#customer-field-{{ customer_key }}').remove()" data-toggle="tooltip" title="{{ entry_remove }}" class="btn btn-danger"><i class="fa fa-minus-circle"></i></button>
											</td>
										</tr>
										{% set customer_key = customer_key + 1 %}
									{% endfor %}
								</tbody>
								<tfoot>
								<td colspan="4"></td>
								<td><button type="button" onclick="addcustomerField()" data-toggle="tooltip" title="" class="btn btn-primary" data-original-title="Добавить поле"><i class="fa fa-plus-circle"></i></button></td>
							</tfoot>
							</table>
							<script>
								var customerField = {{ customer_key }};
								function addcustomerField(){
									html  = '<tr id="customer-field-' + customerField + '">';
									html += '<td><select name="module_custom_customer[fields][' + customerField + '][name]" class="form-control">';
										{% for name, item in customer_fields %}
											html += '<option value="{{ name }}" >{{ item.label }}';
										{% endfor %}
									html += '</select></td>';
									html += '<td>';
										{% for customer_group in customer_groups %}
											html += '<div class="checkbox"><label><input type="checkbox" name="module_custom_customer[fields][' + customerField + '][customer_group][]" value="{{ customer_group.customer_group_id }}" />{{ customer_group.name }}</label></div>';
										{% endfor %}
									html += '</td>';
									html += '<td>';
										{% for customer_group in customer_groups %}
											html += '<div class="checkbox"><label><input type="checkbox" name="module_custom_customer[fields][' + customerField + '][required][]" value="{{ customer_group.customer_group_id }}" />{{ customer_group.name }}</label></div>';
										{% endfor %}
									html += '</td>';
									html += '<td><input type="text" name="module_custom_customer[fields][' + customerField + '][validation]" placeholder="{{ entry_validate}}" id="input-customer-sort" class="form-control"/></td>';
									html += '<td><button type="button" onclick="$(\'#customer-field-' + customerField + '\').remove();" data-toggle="tooltip" title="Удалить" class="btn btn-danger"><i class="fa fa-minus-circle"></i></button></td>';
									html += '</tr>';
									$('#customer-field').append(html);
									customerField++;
								};
							</script>
						</div>
						<div class="tab-pane" id="tab-shipping">
							<div class="form-group">
								<label class="col-sm-2 control-label" for="input-shipping-status"><span data-toggle="tooltip" title="{{ help_shipping }}">{{ entry_status }}</span></label>
								<div class="col-sm-10">
									<select name="module_custom_shipping[status]" id="input-shipping-status" class="form-control">
										{% if shipping.status %}
										<option value="1" selected="selected">{{ text_enabled }}</option>
										<option value="0">{{ text_disabled }}</option>
										{% else %}
										<option value="1">{{ text_enabled }}</option>
										<option value="0" selected="selected">{{ text_disabled }}</option>
										{% endif %}
									</select>
								</div>
							</div>
							<br>
							<table id="shipping-field" class="table table-striped table-bordered table-hover">
								<thead>
									<tr>
										<td class="text-left">{{ column_field }}</td>
										<td>{{ column_shipping_method }}</td>
										<td>{{ column_required }}</td>
										<td>{{ column_validation }}</td>
										<td width="56px"></td>
									</tr>
								</thead>
								<tbody>
									{% set shipping_key = 0 %}
									{% for field in shipping.fields %}
										<tr id="shipping-field-{{ shipping_key }}">
											<td>
												<select name="module_custom_shipping[fields][{{ shipping_key }}][name]" id="input-shipping-fields-{{ shipping_key }}" class="form-control">
													{% for name, item in shipping_fields %}
														{% set selected = '' %}
														{% if field.name == name %}
															{% set selected = 'selected="selected"' %}
														{% else %}
															{% set selected = 'data-field-name="' + field.name + '"' %}
														{% endif %}
														<option value="{{ name }}" {{ selected }} >{{ item.label }}</option>
													{% endfor %}
												</select>
											</td>
											<td>
												{% set method_row = 0 %}
												{% for method in shipping_methods %}
												<div class="checkbox"><label>
													{% if field.method and (method.code in field.method) %}
														<input type="checkbox" name="module_custom_shipping[fields][{{ shipping_key }}][method][{{ method_row }}]" value="{{ method.code }}" checked="checked" />
													{% else %}
														<input type="checkbox" name="module_custom_shipping[fields][{{ shipping_key }}][method][{{ method_row }}]" value="{{ method.code }}" />
													{% endif %}
													{{ method.label }}
												</label></div>
												{% set method_row = method_row + 1 %}
												{% endfor %}
											</td>
											</td>
											<td>
												{% set method_row = 0 %}
												{% for method in shipping_methods %}
												<div class="checkbox"><label>
													{% if field.required and (method.code in field.required) %}
														<input type="checkbox" name="module_custom_shipping[fields][{{ shipping_key }}][required][{{ method_row }}]" value="{{ method.code }}" checked="checked" />
													{% else %}
														<input type="checkbox" name="module_custom_shipping[fields][{{ shipping_key }}][required][{{ method_row }}]" value="{{ method.code }}" />
													{% endif %}
													{{ method.label }}
												</label></div>
												{% set method_row = method_row + 1 %}
												{% endfor %}
											</td>
											<td>
												<input type="text" name="module_custom_shipping[fields][{{ shipping_key }}][validation]" value="{{ field.validation }}" placeholder="{{ entry_validate }}" id="input-shipping-sort" class="form-control"/>
											</td>
											<td>
												<button type="button" onclick="$('#shipping-field-{{ shipping_key }}').remove()" data-toggle="tooltip" title="{{ entry_remove }}" class="btn btn-danger"><i class="fa fa-minus-circle"></i></button>
											</td>
										</tr>
										{% set shipping_key = shipping_key + 1 %}
									{% endfor %}
								</tbody>
								<tfoot>
									<td colspan="4"></td>
									<td>
										<button type="button" onclick="addShippingField()" data-toggle="tooltip" title="" class="btn btn-primary" data-original-title="Добавить поле"><i class="fa fa-plus-circle"></i></button>
									</td>
								</tfoot>
							</table>
							<script>
								var shippingField = {{ shipping_key }};
								function addShippingField(){
									html  = '<tr id="shipping-field-' + shippingField + '">';
									html += '<td><select name="module_custom_shipping[fields][' + shippingField + '][name]" id="input-shipping-fields-' + shippingField + '" class="form-control">';
										{% for name, item in shipping_fields %}
											html += '<option value="{{ name }}" >{{ item.label }}';
										{% endfor %}
									html += '</select></td>';
									html += '<td>';
										{% set method_row = 0 %}
										{% for method in shipping_methods %}
											html += '<div class="checkbox"><label><input type="checkbox" name="module_custom_shipping[fields][' + shippingField + '][method][{{ method_row }}]" value="{{ method.code }}" />{{ method.label }}</label></div>';
											{% set method_row = method_row + 1 %}
										{% endfor %}
									html += '</td>';
									html += '<td>';
										{% set method_row = 0 %}
										{% for method in shipping_methods %}
											html += '<div class="checkbox"><label><input type="checkbox" name="module_custom_shipping[fields][' + shippingField + '][required][{{ method_row }}]" value="{{ method.code }}" />{{ method.label }}</label></div>';
											{% set method_row = method_row + 1 %}
										{% endfor %}
									html += '</td>';
									html += '<td><input type="text" name="module_custom_shipping[fields][' + shippingField + '][validation]" value="{{ field.validation }}" placeholder="{{ entry_validate }}" id="input-shipping-sort" class="form-control"/></td>';
									html += '<td><button type="button" onclick="$(\'#shipping-field-' + shippingField + '\').remove();" data-toggle="tooltip" title="Удалить" class="btn btn-danger"><i class="fa fa-minus-circle"></i></button></td>';
									html += '</tr>';
									$('#shipping-field').append(html);
									shippingField++;
								};
							</script>

						</div>
						<div class="tab-pane" id="tab-payment">
							{% if error_payment %}
								<div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {{ error_payment }}
									<button type="button" class="close" data-dismiss="alert">&times;</button>
								</div>
							{% endif %}
							<div class="form-group">
								<label class="col-sm-2 control-label"><span data-toggle="tooltip" title="{{ help_payment }}">{{ entry_status }}</span></label>
								<div class="col-sm-10">
									<select class="form-control" readonly>
										<option selected="selected" disabled>{{ text_enabled }}</option>
									</select>
								</div>
							</div>
							<br>
							<table id="payment-methods" class="table table-striped table-bordered table-hover">
								<thead>
									<tr>
										<td class="text-left">{{ column_field }}</td>
										<td >{{ column_custumer_group }}</td>
										<td width="56px"></td>
									</tr>
								</thead>
								<tbody>
									{% set payment_key = 0 %}
									{% for method in payment.methods %}
										<tr id="payment-method-{{ payment_key }}">
											<td>
												<select name="module_custom_payment[methods][{{ payment_key }}][name]" id="input-customer-method-{{ payment_key }}" class="form-control">
													{% for item in payment_methods %}
														<option value="{{ item.code }}" {% if item.code == method.name %}selected="selected"{% endif %}>{{ item.label }}</option>
													{% endfor %}
												</select>
											</td>
											<td>
												{% for customer_group in customer_groups %}
													<div class="checkbox"><label>
														{% if method.customer_group and (customer_group.customer_group_id in method.customer_group) %}
															<input type="checkbox" name="module_custom_payment[methods][{{ payment_key }}][customer_group][]" value="{{ customer_group.customer_group_id }}" checked="checked" />
														{% else %}
															<input type="checkbox" name="module_custom_payment[methods][{{ payment_key }}][customer_group][]" value="{{ customer_group.customer_group_id }}" />
														{% endif %}
														{{ customer_group.name }}
													</label></div>
												{% endfor %}
											</td>
											<td>
												<button type="button" onclick="$('#payment-method-{{ payment_key }}').remove()" data-toggle="tooltip" title="{{ entry_remove }}" class="btn btn-danger"><i class="fa fa-minus-circle"></i></button>
											</td>
										</tr>
										{% set payment_key = payment_key + 1 %}
									{% endfor %}
								</tbody>
								<tfoot>
									<td colspan="2"></td>
									<td>
										<button type="button" onclick="addPaymentMethod()" data-toggle="tooltip" title="" class="btn btn-primary" data-original-title="Добавить поле"><i class="fa fa-plus-circle"></i></button>
									</td>
								</tfoot>
							</table>

							<script>
							var payment_key = {{ payment_key }};
							function addPaymentMethod(){

								html  = '<tr id="payment-method-' + payment_key + '">';
								html += '<td><select name="module_custom_payment[methods][' + payment_key + '][name]" id="input-payment-method-' + payment_key + '" class="form-control">';
									{% for name, item in payment_methods %}
										html += '<option value="{{ item.code }}" >{{ item.label }}';
									{% endfor %}
								html += '</select></td>';

								html += '<td>';
									{% for customer_group in customer_groups %}
										html += '<div class="checkbox"><label><input type="checkbox" name="module_custom_payment[methods][' + payment_key + '][customer_group][]" value="{{ customer_group.customer_group_id }}" />{{ customer_group.name }}</label></div>';
									{% endfor %}
								html += '</td>';

								html += '<td><button type="button" onclick="$(\'#payment-method-' + payment_key + '\').remove();" data-toggle="tooltip" title="Удалить" class="btn btn-danger"><i class="fa fa-minus-circle"></i></button></td>';
								html += '</tr>';

								$('#payment-methods').append(html);
								payment_key++;
							};
							</script>

						</div>
						<div class="tab-pane" id="tab-redirect">
							{# Redirect Cart #}
							<div class="form-group">
								<label class="col-sm-2 control-label" for="input-redirect-cart"><span data-toggle="tooltip" title="{{ help_redirect_cart }}">{{ entry_redirect_cart }}</span></label>
								<div class="col-sm-10">
									<select name="module_custom_redirect_cart" id="input-redirect-cart" class="form-control">
										{% if (redirect_cart) %}
										<option value="1" selected="selected">{{ text_enabled }}</option>
										<option value="0">{{ text_disabled }}</option>
										{% else %}
										<option value="1">{{ text_enabled }}</option>
										<option value="0" selected="selected">{{ text_disabled }}</option>
										{% endif %}
									</select>
								</div>
							</div>
							{# End Redirect Cart #}
							{# Redirect Checkout #}
							<div class="form-group">
								<label class="col-sm-2 control-label" for="input-redirect-checkout"><span data-toggle="tooltip" title="{{ help_redirect_checkout }}">{{ entry_redirect_checkout }}</span></label>
								<div class="col-sm-10">
									<select name="module_custom_redirect_checkout" id="input-redirect-checkout" class="form-control">
										{% if (redirect_checkout) %}
										<option value="1" selected="selected">{{ text_enabled }}</option>
										<option value="0">{{ text_disabled }}</option>
										{% else %}
										<option value="1">{{ text_enabled }}</option>
										<option value="0" selected="selected">{{ text_disabled }}</option>
										{% endif %}
									</select>
								</div>
							</div>
							{# End Redirect Checkout #}
						</div>
						<div class="tab-pane" id="tab-about">
							<p>{{ version }}</p>
							<p>{{ about_module }}</p>

							<div class="panel panel-default">
								<div class="panel-heading">{{ entry_support }}</div>
								<div class="panel-body">
									<script src="https://yastatic.net/q/forms-frontend-ext/_/embed.js"></script><iframe src="https://forms.yandex.ru/u/5d2c8cbd6b6a500283b57573/?iframe=1" frameborder="0" name="ya-form-5d2c8cbd6b6a500283b57573" width="650"></iframe>
								</div>
							</div>
						</div>
					</div>
				</form>
      </div>
    </div>
  </div>
</div>
